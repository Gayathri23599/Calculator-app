<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gayathri.mycalculator.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:rowCount="4"
            android:columnCount="4">

            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/one"
                android:layout_gravity="left|top"
                android:onClick="charToNumber"
                android:text="1" />

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:onClick="charToNumber"
                android:text="4" />

            <Button
                android:id="@+id/seven"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:onClick="charToNumber"
                android:text="7" />

            <Button
                android:id="@+id/Reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:onClick="reset"
                android:text="clear" />

            <Button
                android:id="@+id/two"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:onClick="charToNumber"
                android:text="2" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:onClick="charToNumber"
                android:text="5" />

            <Button
                android:id="@+id/eight"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:onClick="charToNumber"
                android:text="8" />

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:onClick="charToNumber"
                android:text="0" />

            <Button
                android:id="@+id/three"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:onClick="charToNumber"
                android:text="3" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:onClick="charToNumber"
                android:text="6" />

            <Button
                android:id="@+id/nine"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top"
                android:onClick="charToNumber"
                android:text="9" />

            <Button
                android:id="@+id/exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top"
                android:onClick="set"
                android:text="=" />

            <Button
                android:id="@+id/plus"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top|fill"
                android:onClick="operation"
                android:text="+" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top|fill"
                android:onClick="operation"
                android:text="-" />

            <Button
                android:id="@+id/mul"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="left|top|fill"
                android:onClick="operation"
                android:text="*" />

            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|top|fill"
                android:onClick="operation"
                android:text="/" />

        </GridLayout>

    </LinearLayout>
